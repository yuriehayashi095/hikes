<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
      <div id="logo">
       <%= image_tag 'logo.png', :alt => 'hikes-logo' %>
      </div>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to sanitize('<span class="glyphicon glyphicon-home"></span>'), root_path %></li>
        <% if logged_in? %>
          <li><%= link_to sanitize('<span class="glyphicon glyphicon-heart"></span>'), favorites_user_path(current_user) %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-align-justify"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "プロフィールの編集", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>