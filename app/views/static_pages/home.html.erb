<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="hike_form">
        <%= render 'shared/hike_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>みんなのHike</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Hikesへようこそ</h1>

    <%= link_to "Hikeに登録する", signup_path, class: "btn btn-lg btn-warning" %>
  </div>
<% end %>